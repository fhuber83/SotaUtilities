<Window x:Class="PlantMaster2000.ClipboardWoraroundWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlantMaster2000"
        mc:Ignorable="d"
        Title="Clipboard Workaround" Height="472" Width="469" Closing="Window_Closing">
    <Grid>
        <TextBox x:Name="TextBox1" FontFamily="Consolas" FontSize="14" TextWrapping="NoWrap" Text="" Margin="10,10,10,35" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>
        <Button Content="Clear" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10" Click="ButtonClear_Click" Width="88"/>
    </Grid>
</Window>
