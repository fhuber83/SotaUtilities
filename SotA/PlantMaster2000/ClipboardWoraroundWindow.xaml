<Window x:Class="PlantMaster2000.ClipboardWorkaroundWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlantMaster2000"
        mc:Ignorable="d"
        Title="To Do List" Height="500" Width="500" Closing="Window_Closing">
    <Grid>
        <TextBox x:Name="TextBox1" FontFamily="Consolas" FontSize="14" AcceptsReturn="True" TextWrapping="NoWrap" Text="" Margin="10,10,10,35" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" KeyDown="TextBox1_KeyDown"/>
        <Button Content="_Save" Margin="0,0,10,10" HorizontalAlignment="Right" Width="77" Height="20" VerticalAlignment="Bottom" Click="ButtonSave_Click"/>
    </Grid>
</Window>
