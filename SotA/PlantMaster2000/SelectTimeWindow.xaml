<Window x:Class="PlantMaster2000.SelectTimeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlantMaster2000"
        mc:Ignorable="d"
        Title="SelectTimeWindow" Height="142" Width="215">
    <Grid>
        <Label Content="Date" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TextBoxDate" Margin="53,14,10,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" FontFamily="Consolas" ToolTip="DD.MM.YYYY"/>

        <Label Content="Time" HorizontalAlignment="Left" Margin="10,33,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TextBoxTime" Margin="53,37,10,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" FontFamily="Consolas" ToolTip="HH:MM"/>

        <Button Content="OK" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="60" Margin="0,0,0,10" Click="ButtonOkClicked"/>
    </Grid>
</Window>
